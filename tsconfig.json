{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "api/build",
    "skipLibCheck": true,
    "target": "esnext"
  },
  "exclude": [".dynamodb/**/*", ".serverless/**/*", ".vscode/**/*", ".webpack/**/*", "node_modules"],
  "types": ["node"]
}
